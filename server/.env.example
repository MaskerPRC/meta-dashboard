# 复制此文件为 .env 并修改相应的值

# 数据库配置
DB_PATH=./data/ai_dashboard.db

# 服务器配置
PORT=3000
NODE_ENV=development

# JWT密钥（请修改为您自己的密钥）
JWT_SECRET=your-jwt-secret-key-change-this

# 第三方登录配置
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CALLBACK_URL=
ADMIN_GITHUB_USERNAME=
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CALLBACK_URL=
ADMIN_EMAIL=

# 会话密钥（请修改为您自己的密钥）
SESSION_SECRET=your-session-secret-change-this

ALLOWED_ORIGINS=http://localhost:5100,
COOKIE_DOMAIN=localhost
FRONTEND_URL=http://localhost:5100

# 必需配置
ALICLOUD_ACCESS_KEY_ID=你的AccessKey_ID
ALICLOUD_ACCESS_KEY_SECRET=你的AccessKey_Secret
ALICLOUD_OSS_BUCKET=meta-dashboard

# 可选配置
ALICLOUD_OSS_REGION=oss-cn-hangzhou

OPENAI_API_KEY=
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=openai/gpt-4o

# 微信开放平台配置（扫码登录）
WECHAT_REDIRECT_URI=http://localhost:3015/api/auth/wechat/callback
WECHAT_APP_ID=
WECHAT_APP_SECRET=
ADMIN_WECHAT_NICKNAMES=

# 微信公众号配置（只支持微信公众平台服务号，并且不支持本地localhost调试）
WECHAT_MP_APP_ID=your-wechat-mp-app-id
WECHAT_MP_APP_SECRET=your-wechat-mp-app-secret
WECHAT_MP_CALLBACK_URL=
